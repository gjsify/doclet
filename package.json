{
  "name": "@gjsify/doclet",
  "version": "0.0.1",
  "description": "Experimental Valadoc extension to generate Typescript Definition files for Gjs and node-gtk",
  "main": "index.js",
  "scripts": {
    "update:submodules": "git submodule update --init --recursive && git submodule foreach git pull origin master",
    "set-version": "VALA_VERSION=$(valac --api-version)",
    "clear": "rm -rf @types",
    "clear:build": "rm -rf builddir",
    "build": "npm run build:meson && npm run build:ninja",
    "build:meson": "meson builddir",
    "build:ninja": "ninja -C builddir",
    "types": "npm run set-version && npm run update:submodules && npm run doc:gtk",
    "doc:gtk:local": "VALA_VERSION=$(valac --api-version) && valadoc --verbose --enable-experimental --enable-experimental-non-null --profile gobject --deps --use-svg-images --target-glib auto --doclet \"builddir\" --vapidir \"/usr/local/share/vala-$VALA_VERSION/vapi\" --girdir \"girs/gir-1.0\" --package-name \"Gtk-3.0\" -o \"./@types/\" /usr/local/share/vala-$VALA_VERSION/vapi/gtk+-3.0.vapi",
    "doc:gtk": "VALA_VERSION=$(valac --api-version) && valadoc --verbose --enable-experimental --enable-experimental-non-null --profile gobject --deps --use-svg-images --target-glib auto --doclet \"builddir\" --vapidir \"/usr/share/vala-$VALA_VERSION/vapi\" --girdir \"girs/gir-1.0\" --package-name \"Gtk-3.0\" -o \"./@types/\" /usr/share/vala-$VALA_VERSION/vapi/gtk+-3.0.vapi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gjsify/doclet.git"
  },
  "keywords": [
    "gjs",
    "node-gtk",
    "typescript",
    "definition",
    "valadoc",
    "vala",
    "javascript",
    "generate"
  ],
  "author": "Pascal Garber <pascal@artandcode.studio>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/gjsify/doclet/issues"
  },
  "homepage": "https://github.com/gjsify/doclet#readme"
}
